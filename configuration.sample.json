{
  "general": {
    "random_seed": 100,
    "verbose": 1,
    "output_directory_template": "./models/{bd}{ct}-{earc}-{darc}-{epc}"
  },
  "logger": {
    "log_format": "(%(asctime)s) %(name)s [%(levelname)s]: %(message)s",
    "log_file": "./logs/{bd}{ct}-{earc}-{darc}-{epc}/seq2seq.log",
    "log_level": "info"
  },
  "export": {
    "model_save_template": "U{usr_num}.dat",
    "svc_csv_fieldnames": [
      "Kernel",
      "Nu",
      "Gamma",
      "F1"
    ]
  },
  "data": {
    "reading": {
      "user_count": 210,
      "genuine_sample_count": 15,
      "forged_sample_count": 5,
      "genuine_path_template": "./data_set/U{user}S{sample}.sig",
      "forged_path_template": "./data_set/U{user}S{sample}.sig",
      "feature_count": 3
    },
    "reshaping": {
      "input_dimension": 27,
      "sampling_step": 4,
      "normalization": "ms",
      "rolling_window_size": 1,
      "rolling_window_step": 1
    }
  },
  "rnn": {
    "autoencoder": {
      "train": {
        "batch_size": 16,
        "epochs": 100,
        "sampling_count": 15
      },
      "layers_config": {
        "return_sequences": true,
        "go_backwards": false,
        "stateful": false,
        "unroll": false,
        "implementation": 2,
        "activation": "tanh",
        "recurrent_activation": "hard_sigmoid",
        "use_bias": true,
        "kernel_initializer": "glorot_uniform",
        "recurrent_initializer": "orthogonal",
        "bias_initializer": "zeros",
        "kernel_regularizer": null,
        "recurrent_regularizer": null,
        "bias_regularizer": null,
        "activity_regularizer": null,
        "kernel_constraint": null,
        "recurrent_constraint": null,
        "bias_constraint": null,
        "dropout": 0.4,
        "recurrent_dropout": 0.0
      },
      "compile_config": {
        "optimizer": {
          "name": "nadam",
          "args": {
          }
        },
        "metrics": [
          "accuracy"
        ]
      },
      "architecture": {
        "mask_value": 0.0,
        "encoder": [
          72,
          150
        ],
        "decoder": [
          9
        ],
        "latent_mean": 0.0,
        "latent_std": 1.0,
        "bidirectional": true,
        "bidirectional_merge_mode": "ave",
        "cell_type": "LSTM"
      },
      "callbacks": {
        "tensorboard": {
          "log_dir_template": "./logs/{bd}{ct}-{earc}-{darc}-{epc}/tensorboard",
          "histogram_freq": 0,
          "write_images": false
        }
      }
    }
  },
  "svc": {
    "reference_sample_count": 5,
    "train_user_count": 180,
    "test_user_count": 30
  }
}
